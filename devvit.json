{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "iqlympics",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "endpoint": "/internal/menu/create-post",
        "forUserType": "moderator",
        "label": "Add IQlympics Gameplay",
        "location": "subreddit"
      }
    ]
  },
  "forms": {
    "createPostForm": "/internal/form/create-post"
  },
  "triggers": {
    "onPostDelete": "/internal/trigger/post-delete"
  },
  "scheduler": {
    "tasks": {
      "iqlympics-next-round": {
        "endpoint": "/internal/job/next-round"
      }
    }
  },
  "settings": {
    "global": {
      "API_KEY": {
        "type": "string",
        "label": "Backend API Key",
        "isSecret": true
      }
    }
  },
  "permissions": {
    "http": {
      "domains": [],
      "enable": true
    },
    "redis": true,
    "reddit": {
      "enable": true
    }
  },
  "media": {
    "dir": "assets"
  }
}
